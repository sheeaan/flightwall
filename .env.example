# OpenSky Network API credentials (register at https://opensky-network.org)
OPENSKY_USERNAME=
OPENSKY_PASSWORD=

# Database configuration
DATABASE_URL=sqlite:///flightwall.db

# Ingestion settings
POLL_INTERVAL_SECONDS=10
DEFAULT_RADIUS_KM=250

# Location override (leave empty for IP-based geolocation)
# Format: latitude,longitude
USER_LOCATION=

# Cache settings
CACHE_TTL_SECONDS=5

# Data retention
RETENTION_HOURS=24

# Flask settings
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change-this-in-production
